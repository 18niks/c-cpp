/* TESTING FOR MEMORY LOCATIONS 
   AUTHOR : NIKITA 
   LANG : C
*/

#include <stdio.h>

int main( ){
	
	int i;
	int intArr[3] = { 1, 2, 3 };
	
	printf( "intArr : %d \n ", intArr);
	printf( "intArr[0] ? %d \n intArr[1] ? %d \n intArr[2] 	? %d \n ", intArr[0], intArr[1], intArr[2]);
	printf( "&intArr[0] ? %d\n &intArr[1] ? %d \n &intArr[2] ? %d \n ", &intArr[0], &intArr[1], &intArr[2]);
	printf( "\n Putting ... intArr[0] <- 4 \n") ;
	
	intArr[0] = 4;
	printf( "intArr : %d \n ", intArr);
	printf( "intArr[0] ? %d \n intArr[1] ? %d \n intArr[2] 	? %d \n ", intArr[0], intArr[1], intArr[2]);
	printf( "&intArr[0] ? %d\n &intArr[1] ? %d \n &intArr[2] ? %d \n ", &intArr[0], &intArr[1], &intArr[2]);
	
	
    	for (i=0; i<3; i++) {
		
		printf( "intArr[%d] <- ",i);
		scanf( "%d", &intArr[i]);
	}
	
	printf( "intArr : %d \n ", intArr);
	printf( "intArr[0] ? %d \n intArr[1] ? %d \n intArr[2] 	? %d \n ", intArr[0], intArr[1], intArr[2]);
	printf( "&intArr[0] ? %d\n &intArr[1] ? %d \n &intArr[2] ? %d \n ", &intArr[0], &intArr[1], &intArr[2]);
	
	
	return 0;
	
}

